<map proto="1.4.0">
<name>Anvil</name>
<include src="tutorial.xml"/>
<version>1.0.0</version>
<gamemode>tdm</gamemode>
<objective>Welcome to Anvil facilities! Your goal is to be the team with the most points after 10 minutes!</objective>
<authors>
    <author uuid="1aad55f7-2dea-4f22-85ca-ad9de3a78609" contribution="Map author and creator"/> <!-- Technodono -->
</authors>
<score>
    <kills>1</kills>
</score>
<time>10m</time>
<rules>
    <rule>Fall damage is disabled!</rule>
</rules>
<broadcasts>
    <tip after="1m" every="2m">`e⚠  `7Anvil facillites provides it's workers with only the best transportation technology... Use the `nJump Pads`r `7to reach higher floors !  `e⚠</tip>
	<tip after="0s" every="4m">`e⚠  `7Need a nice vantage point? There are `nLaunch Pads`r `7above each teams spawn... Use them to get onto the iron bucket!  `e⚠</tip>
</broadcasts>
<teams>
   <team id="blue" color="blue" max="10" max-overfill="12">Blue</team>
   <team id="red" color="dark red" max="10" max-overfill="12">Red</team>
</teams>
<spawns>
    <spawn team="blue" kit="blue-kit" yaw="0">
        <regions yaw="0">
            <cuboid min="-15,12,2" max="-14,12,-2"/>
        </regions>
    </spawn>
    <spawn team="red" kit="red-kit" yaw="179">
        <regions yaw="179">
            <cuboid min="115,12,-2" max="114,12,2"/>
        </regions>
    </spawn>
    <default>
        <regions yaw="90">
            <cuboid min="-2,25,2" max="-4,25,-2"/>
        </regions>
        <regions yaw="-90">
            <cuboid min="2,25,-2" max="4,25,2"/>
        </regions>
    </default>
</spawns>
<kits>
    <kit id="spawn">
        <item slot="0" name="Box cutter" unbreakable="true">gold sword</item>
        <item slot="1" name="Rifle">bow</item>
		<item slot="3" amount="8">bread</item>
        <item slot="2" amount="10">arrow</item>
        <potion duration="3" amplifier="25">heal</potion>
        <potion duration="3" amplifier="25">damage resistance</potion>
    </kit>
    <kit id="blue-kit" parents="spawn">
        <helmet color="3C44AA" unbreakable="true">leather helmet</helmet>
        <chestplate color="8f8f8f" unbreakable="true">leather chestplate</chestplate>
        <leggings unbreakable="true" material="iron leggings">
		    <enchantment level="3">protection projectile</enchantment>
		</leggings>
        <boots color="8f8f8f" unbreakable="true" material="leather boots">
		    <enchantment level="2">depth strider</enchantment>
		</boots>
    </kit>
    <kit id="red-kit" parents="spawn">
        <helmet color="B02E26" unbreakable="true">leather helmet</helmet>
        <chestplate color="8f8f8f" unbreakable="true">leather chestplate</chestplate>
        <leggings unbreakable="true" material="iron leggings">
		    <enchantment level="3">protection projectile</enchantment>
		</leggings>
        <boots color="8f8f8f" unbreakable="true" material="leather boots">
		    <enchantment level="2">depth strider</enchantment>
		</boots>
    </kit>
</kits>
<filters>
    <team id="only-blue">blue</team>
    <team id="only-red">red</team>
</filters>
<regions>
    <!-- Enter -->
    <apply enter="only-red" message="`lYou may not enter the opposing team's spawn! `e⚠">
        <region>
            <cuboid min="118,11,13" max="111,30,-11"/>
			<cuboid min="117,10,-2" max="112,6,3"/>
        </region>
    </apply>
    <apply enter="only-blue" message="`lYou may not enter the opposing team's spawn! `e⚠">
        <region>
            <cuboid min="-18,11,-11" max="-11,30,13"/>
			<cuboid min="-17,10,3" max="-11,6,-2"/>
        </region>
    </apply>
	<!-- Spawning areas -->
    <cuboid id="red-spawn" min="115,12,-2" max="114,12,2"/>
    <cuboid id="blue-spawn" min="-15,12,2" max="-14,12,-2"/>
    <!-- Lab Area -->
    <apply velocity=" 0.0,1.0,-0.4">
        <region>
            <cuboid min="-4,6,19" max="-1,8,22"/>
        </region>
    </apply>
    <apply velocity=" 0.0,1.0,-0.4">
        <region>
            <cuboid min="46,6,19" max="49,8,22"/>
        </region>
    </apply>
    <apply velocity=" 0.0,1.0,-0.4">
        <region>
            <cuboid min="96,6,19" max="99,8,22"/>
        </region>
    </apply>
    <!-- Red Bounce -->
    <apply velocity=" -1.4,0.4,0.0">
        <region>
            <cuboid min="113,16,2" max="112,18,-2"/>
        </region>
    </apply>
    <!-- Blue Bounce -->
    <apply velocity="@ 1.4,0.4,0.0">
        <region>
            <cuboid min="-13,16,-2" max="-12,18,2"/>
        </region>
    </apply>
	<!-- Rules Applied -->
    <apply block="never" message="`lYou may not edit the map! `e⚠">
        <everywhere />
    </apply>
    <apply block-physics="never">
        <everywhere />
    </apply>
</regions>
<toolrepair>
    <tool>gold sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>arrow</item>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>iron leggings</item>
    <item>leather boots</item>
	<item>golden apple</item>
	<item>bread</item>
	<item>wood</item>
	<item>stick</item>
</itemremove>
<disabledamage>
    <damage>fall</damage>
    <damage ally="true" self="true" enemy="false" other="false">block explosion</damage>
</disabledamage>
<timelock>on</timelock>
<hunger>
    <depletion>on</depletion>
</hunger>
<killreward>
    <item amount="6">arrow</item>
    <item amount="1">golden apple</item>
    <item amount="2">bread</item>
</killreward>
</map>