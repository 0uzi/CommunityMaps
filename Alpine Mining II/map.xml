<map proto="1.4.0">
<name>Alpine Mining II</name>
<version>0.1.2</version>
<objective>Destroy the enemy's 2 monuments!</objective>
<authors>
    <author uuid="fe3608b7-d105-4029-8800-34b3147065b6"/> <!-- rockymine -->
</authors>
<contributors>
    <contributor uuid="430ec559-364a-4363-ac7a-2529050440ac" contribution="XML"/> <!-- mame_BT -->
    <contributor uuid="e2d2c2c6-cea9-4510-9ab2-a091b5605b30" contribution="Quality of life additions to XML"/> <!-- Ruediger_LP -->
</contributors>
<created>2021-04-24</created>
<phase>development</phase>
<broadcasts>
    <tip after="10s" every="8m">Try bulk crafting armor and buckets using iron blocks!</tip>
    <tip after="11s" every="8m">If your team runs out of iron blocks, mine iron ore to obtain iron ingots!</tip>
</broadcasts>
<teams>
    <team id="green" color="dark green" max="40" max-overfill="45">Green</team>
    <team id="orange" color="gold" max="40" max-overfill="45">Orange</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" material="iron sword"/>
        <item slot="1" material="bow"/>
        <item slot="28" amount="64" material="arrow"/>
        <item slot="2" material="diamond pickaxe">
            <enchantment level="3">unbreaking</enchantment>
        </item>
        <item slot="3" material="iron axe">
            <enchantment>efficiency</enchantment>
            <enchantment level="3">unbreaking</enchantment>
        </item>
        <item slot="30" material="iron spade">
            <enchantment>efficiency</enchantment>
            <enchantment level="3">unbreaking</enchantment>
        </item>
        <item slot="4" amount="64" material="wood" damage="5"/>
        <item slot="31" amount="64" material="wood" damage="5"/>
        <item slot="5" amount="32" material="glass"/>
        <item slot="7" material="golden apple"/>
        <item slot="8" amount="64" material="golden carrot"/>
    </kit>
    <kit id="green-kit" parents="spawn-kit">
        <chestplate color="00AA00" unbreakable="true" material="leather chestplate"/>
        <leggings color="00AA00" unbreakable="true" material="leather leggings"/>
    </kit>
    <kit id="orange-kit" parents="spawn-kit">
        <chestplate color="FFAA00" unbreakable="true" material="leather chestplate"/>
        <leggings color="FFAA00" unbreakable="true" material="leather leggings"/>
    </kit>
    <kit id="kill-reward">
       <effect duration="5" amplifier="2">speed</effect>
    </kit>
</kits>
<spawns>
    <default yaw="0">
        <region>
            <cuboid min="21,32,-172" max="22,32,-171"/>
        </region>
    </default>
    <spawn team="green" yaw="90" kit="green-kit">
        <region>
            <cuboid min="40.2,22.5,253.5" max="39.2,22.5,252.5"/>
        </region>
    </spawn>
    <spawn team="orange" yaw="-90" kit="orange-kit">
        <region>
            <cuboid min="-39.2,22.5,-253.5" max="-38.2,22.5,-252.5"/>
        </region>
    </spawn>
</spawns>
<filters>
    <deny id="only-green">
        <team>orange</team>
    </deny>
    <deny id="only-orange">
        <team>green</team>
    </deny>
    <deny id="deny-beacon-use">
        <material>beacon</material>
    </deny>
    <not id="deny-void">
        <void/>
    </not>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="green-spawn" min="-34,-250" max="-46,-259"/>
        <rectangle id="orange-spawn" min="35,248" max="47,257"/>
    </union>
    <apply enter="only-green" message="You may not enter the enemy spawn!" region="green-spawn"/>
    <apply enter="only-orange" message="You may not enter the enemy spawn!" region="orange-spawn"/>
    <apply block="never" message="You may not break or place blocks in the spawn area!" region="spawns"/>
    <apply use="deny-beacon-use"/>
    <apply block-place="deny-void" message="You may not build outside of the map!"/>
</regions>
<destroyables materials="obsidian" mode-changes="true">
    <destroyables name="East Monument">
        <destroyable owner="green">
            <region>
                <cuboid min="20,43,183" max="23,46,186"/>
            </region>
        </destroyable>
        <destroyable owner="orange">
            <region>
                <cuboid min="14,24,-142" max="17,27,-139"/>
            </region>
        </destroyable>
    </destroyables>
    <destroyables name="West Monument">
        <destroyable owner="green">
            <region>
                <cuboid min="-13,24,142" max="-16,27,139"/>
            </region>
        </destroyable>
        <destroyable owner="orange">
            <region>
                <cuboid min="-19,43,-183" max="-22,46,-186"/>
            </region>
        </destroyable>
    </destroyables>
</destroyables>
<modes>
    <mode after="30m" material="beacon"/>
    <mode after="60m" material="coal block"/>
</modes>
<block-drops>
    <rule>
        <region>
            <region id="everywhere"/>
        </region>
        <filter>
            <material>gravel</material>
        </filter>
        <drops>
            <item>gravel</item>
        </drops>
    </rule>
    <rule>
        <region>
            <region id="everywhere"/>
        </region>
        <filter>
            <material>iron ore</material>
        </filter>
        <drops>
            <item>iron ingot</item>
        </drops>
    </rule>
</block-drops>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>diamond pickaxe</tool>
    <tool>iron axe</tool>
    <tool>iron spade</tool>
</toolrepair>
<itemremove>
    <item>wood</item>
    <item>golden carrot</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>obsidian</item>
    <item>beacon</item>
    <item>coal block</item>
    <item>flint</item>
</itemremove>
<kill-reward>
    <item material="golden apple"/>
    <item amount="16" material="arrow"/>
    <kit id="kill-reward"/>
</kill-reward>
<itemkeep>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<crafting>
    <!-- bulkcrafting; credits to Ruediger_LP. sourced from Columbia CTW XML. -->
    <shaped override="false">
        <result material="iron helmet" amount="9"/>
        <shape>
            <row>III</row>
            <row>I.I</row>
        </shape>
        <ingredient symbol="I">iron block</ingredient>
    </shaped>
    <shaped override="false">
        <result material="iron chestplate" amount="9"/>
        <shape>
            <row>I.I</row>
            <row>III</row>
            <row>III</row>
        </shape>
        <ingredient symbol="I">iron block</ingredient>
    </shaped>
    <shaped override="false">
        <result material="iron leggings" amount="9"/>
        <shape>
            <row>III</row>
            <row>I.I</row>
            <row>I.I</row>
        </shape>
        <ingredient symbol="I">iron block</ingredient>
    </shaped>
    <shaped override="false">
        <result material="iron boots" amount="9"/>
        <shape>
            <row>I.I</row>
            <row>I.I</row>
        </shape>
        <ingredient symbol="I">iron block</ingredient>
    </shaped>
    <shaped override="false">
        <result material="bucket" amount="9"/>
        <shape>
            <row>I.I</row>
            <row>.I.</row>
        </shape>
        <ingredient symbol="I">iron block</ingredient>
    </shaped>
</crafting>
<maxbuildheight>50</maxbuildheight>
<world>
    <timeset>1</timeset>
</world>
<gamerules>
    <doFireTick>false</doFireTick>
</gamerules>
</map>
