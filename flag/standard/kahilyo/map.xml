<map proto="1.4.0">
<name>Kahilyo</name>
<version>1.0</version>
<objective>Hold the flag for 200 seconds!</objective>
<gamemode>kotf</gamemode>
<phase>development</phase>
<authors>
    <author uuid="97d1cc45-0f69-482b-9974-09351aef9dfa"/> <!-- lunaceee -->
    <author uuid="ec5ec930-5cf3-4f8a-ad9f-09056aeed71b"/> <!--Tundren-->
    <author uuid="b2539be1-8f98-4375-b653-9d91cd04c30e"/> <!--mewzy-->
</authors>
<contributors>
  <contributor uuid="621b2aa8-4e5f-4ed8-bd36-0ae2f8952a06" contribution="Feedback"/> <!--strangey-->
</contributors>
<teams>
    <team id="blue" color="blue" max="16">Blue</team>
    <team id="red" color="dark red" max="16">Red</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="2" material="golden apple"/>
        <item slot="8" amount="16" material="arrow"/>
        <helmet unbreakable="true" team-color="true" material="leather helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" material="chainmail leggings">
            <enchantment level="2">projectile_protection</enchantment>
        </leggings>
        <boots unbreakable="true" material="iron boots">
            <enchantment level="2">feather_falling</enchantment>
        </boots>
        <effect duration="6" amplifier="10">damage resistance</effect>
        <game-mode>adventure</game-mode>
    </kit>
    <kit id="flag-pickup" force="true">
        <effect amplifier="-3">health boost</effect>
        <effect duration="3" amplifier="2">absorption</effect>
        <effect duration="200" amplifier="1">slowness</effect>
        <game-mode>adventure</game-mode>
    </kit>
    <kit id="reset-health" force="true">
        <effect duration="0" amplifier="0">health boost</effect>
        <effect duration="2" amplifier="10">regeneration</effect>
        <effect duration="0" amplifier="1">slowness</effect>
        <game-mode>adventure</game-mode>
    </kit>
</kits>
<!--SPAWNS-->
<spawns>
    <default>
        <region yaw="90">
            <cylinder base=".5,58,1.5" height="1" radius="0.5"/>
        </region>
    </default>
    <spawn team="blue" kit="spawn-kit">
        <region yaw="180">
            <cylinder base=".5,19,72.5" height="0" radius="0.5"/>
        </region>
    </spawn>
    <spawn team="red" kit="spawn-kit">
        <region yaw="0">
            <cylinder base=".5,19,-69.5" height="0" radius="0.2"/>
        </region>
    </spawn>
</spawns>
<filters>
    <any id="has-flag">
        <carrying-flag>flag</carrying-flag>
        <not>
            <same-team>
                <carrying-flag>flag</carrying-flag>
            </same-team>
        </not>
    </any>
</filters>
<regions>
    <apply block-break="never" block-place="never"/>
</regions>
<!--Flags-->
<flags>
    <flag id="flag" name="Flag"  color="yellow" shared="true" post="middle" points-rate="1" pickup-kit="flag-pickup" drop-kit="reset-health">
        <post id="middle" return-time="0s" respawn-time="16s" name="Middle Platform">0,19,1</post>
        <post id="east" return-time="0s" respawn-time="16s" name="East Platform">40,19,1</post>
        <post id="west" return-time="0s" respawn-time="16s" name="West Platform">-40,19,1</post>
    </flag>
</flags>
<score>
    <limit>200</limit>
</score>
<toolrepair>
    <tool>stone sword</tool>
    <tool>bow</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
</itemremove>
<itemkeep>
    <item>golden apple</item>
    <item>arrow</item>
</itemkeep>
<kill-reward>
    <item material="golden apple"/>
    <item amount="8" material="arrow"/>
</kill-reward>
<respawn spectate="true">
    <message>
        {"translate":"death.respawn.confirmed.waiting.flagDropped"}
    </message>
</respawn>
<hunger>
    <depletion>off</depletion>
</hunger>
</map>
