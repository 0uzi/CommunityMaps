<map proto="1.4.2">
<name>Kanto</name>
<version>1.1.1</version>
<objective>Capture the wool!</objective>
<created>2021-12-21</created>
<authors>
    <author uuid="55cb168a-e28f-49e5-a853-8268093926c8"/> <!-- 0uzi -->
    <author uuid="fe3608b7-d105-4029-8800-34b3147065b6"/> <!-- rockymine -->
</authors>
<contributors>
    <contributor uuid="345e7c1e-2b0f-4b6e-be83-5494ec6d4e7d" contribution="XML Help"/> <!-- ElDanii, thanks! -->
</contributors>
<teams>
    <team id="red-team" color="red" max="20">Red</team>
    <team id="blue-team" color="blue" max="20">Blue</team>
</teams>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" material="iron_sword" unbreakable="true"/>
        <item slot="1" material="bow" unbreakable="true" enchantment="arrow infinite"/>
        <item slot="2" material="diamond_pickaxe" unbreakable="true"/>
        <item slot="3" material="iron_axe" unbreakable="true"/>
        <item slot="4" material="wood" amount="64" damage="2"/>
        <item slot="5" material="SMOOTH_BRICK" amount="64" damage="3"/>
        <item slot="6" material="WATER_BUCKET"/>
        <item slot="7" material="IRON_INGOT" amount="24"/>
        <item slot="8" material="GOLDEN_APPLE"/>
        <item slot="28" material="arrow"/>
        <item slot="31" material="WORKBENCH" amount="32" damage="2"/>
        <helmet material="leather_helmet" team-color="true" unbreakable="true"/>
        <chestplate material="leather_chestplate" team-color="true" unbreakable="true"/>
        <leggings material="chainmail_leggings" unbreakable="true"/>
        <boots material="leather_boots" team-color="true" unbreakable="true"/>
        <effect duration="oo" amplifier="100">damage resistance</effect>
    </kit>
    <kit force="true" id="reset-resitance-kit">
        <effect duration="0" amplifier="0">damage resistance</effect>
    </kit>
</kits>
<spawns>
    <spawn team="red-team" kit="spawn-kit" yaw="180" region="red-spawn-point"/>
    <spawn team="blue-team" kit="spawn-kit" yaw="0" region="blue-spawn-point"/>
    <default yaw="0" region="obs-spawn-point"/>
</spawns>
<wools craftable="false">
    <wool team="red-team" color="purple" location="-36.5,17.2,-117.5">
        <monument>
            <block>-3,20,122</block>
        </monument>
    </wool>
    <wool team="red-team" color="pink" location="37.5,17.2,-117.5">
        <monument>
            <block>3,20,122</block>
        </monument>
    </wool>
    <wool team="blue-team" color="yellow" location="-36.5,17.2,118.5">
        <monument>
            <block>-3,20,-122</block>
        </monument>
    </wool>
    <wool team="blue-team" color="orange" location="37.5,17.2,118.5">
        <monument>
            <block>3,20,-122</block>
        </monument>
    </wool>
</wools>
<filters>
    <team id="only-blue">blue-team</team>
    <team id="only-red">red-team</team>
    <any id="block-break-void-filter">
        <all>
            <not>
                <any>
                    <material>web</material>
                    <material>water</material>
                    <material>stationary water</material>
                </any>
            </not>
            <void/>
        </all>
    </any>
    <all id="blues-woolrooms-filter">
        <team>red-team</team>
        <filter id="woolrooms-filter"/>
    </all>
    <all id="reds-woolrooms-filter">
        <team>blue-team</team>
        <filter id="woolrooms-filter"/>
    </all>
    <any id="woolrooms-filter">
        <material>web</material>
        <material>wood:1</material>
        <material>smooth brick</material>
        <material>workbench</material>
    </any>
    <all id="only-iron-cause-world">
        <material id="only-iron">iron block</material>
        <cause>world</cause>
    </all>
    <material id="only-air">air</material>
</filters>
<regions>
    <cylinder id="blue-spawn-point" base="0.5,20.5,-126.5" radius="2" height="0"/>
    <cylinder id="red-spawn-point" base="0.5,20.5,127.5" radius="2" height="0"/>
    <cuboid id="obs-spawn-point" min="2.5,50.5,-0.5" max="-1.5,50.5,1.5"/>
    <point id="orange-wool-spawn">37.5,17.2,118.5</point>
    <point id="yellow-wool-spawn">-36.5,17.2,118.5</point>
    <point id="pink-wool-spawn">37.5,17.2,-117.5</point>
    <point id="purple-wool-spawn">-36.5,17.2,-117.5</point>
    <union id="playable">
        <rectangle min="-29,54" max="-12,-53"/>
        <rectangle min="30,54" max="13,-53"/>
        <rectangle min="14,95" max="-13,65"/> <!-- redside -->
        <rectangle min="-13,58" max="14,37"/>
        <rectangle min="-13,65" max="-3,58"/>
        <rectangle min="4,65" max="14,58"/>
        <rectangle min="13,78" max="46,95"/>
        <rectangle min="29,110" max="46,95"/>
        <rectangle min="-45,95" max="-13,78"/>
        <rectangle min="-45,95" max="-28,110"/>
        <rectangle min="14,-94" max="-13,-64"/> <!-- blueside -->
        <rectangle min="-13,-77" max="-45,-94"/>
        <rectangle min="-13,-64" max="-3,-57"/>
        <rectangle min="14,-64" max="4,-57"/>
        <rectangle min="14,-57" max="-13,-36"/>
        <rectangle min="-28,-109" max="-45,-94"/>
        <rectangle min="46,-94" max="13,-77"/>
        <rectangle min="46,-94" max="29,-109"/>
    </union>
    <negative id="not-spawns">
        <union id="spawns">
            <rectangle id="blue-spawn" min="14,-94" max="-13,-135"/>
            <rectangle id="red-spawn" min="-13,95" max="14,136"/>
        </union>
    </negative>
    <union id="blues-woolrooms"> <!-- blue defends / red attacks -->
        <rectangle id="pink-woolroom" min="46,-109" max="29,-126"/>
        <rectangle id="purple-woolroom" min="-28,-109" max="-45,-126"/>
    </union>
    <union id="reds-woolrooms"> <!-- red defends / blue attacks -->
        <rectangle id="yellow-woolroom" min="-45,110" max="-28,127"/>
        <rectangle id="orange-woolroom" min="29,110" max="46,127"/>
    </union>
    <negative id="not-build-area">
            <region id="playable"/>
    </negative>
	  <union id="iron-regen">
        <cuboid min="2.5,16,-103.5" max="-1.5,20,-99.5"/> <!-- blue iron -->
        <cuboid min="-1.5,16,104.5" max="2.5,20,100.5"/> <!-- red iron -->
    </union>
    <!-- applicators -->
    <apply enter="only-red" region="red-spawn" message="You may not enter the enemy's spawn!"/>
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the enemy's spawn!"/>
    <apply enter="only-blue" region="reds-woolrooms" message="You may not enter your own wool room!"/>
    <apply enter="only-red" region="blues-woolrooms" message="You may not enter your own wool room!"/>
    <apply block-place="only-iron-cause-world" block-break="only-iron" region="spawns" message="You may not edit spawn!"/>
    <apply block="reds-woolrooms-filter" region="reds-woolrooms" message="You may not edit the wool room!"/>
    <apply block="blues-woolrooms-filter" region="blues-woolrooms" message="You may not edit the wool room!"/>
    <apply kit="reset-resitance-kit" region="not-spawns"/>
    <apply block="never" region="not-build-area" message="`7You may not build outside the playing area!"/>
</regions>
<spawners>
    <spawner spawn-region="purple-wool-spawn" player-region="purple-woolroom" delay="2s">
        <item material="wool" amount="1" damage="10"/>
    </spawner>
    <spawner spawn-region="pink-wool-spawn" player-region="pink-woolroom" delay="2s">
        <item material="wool" amount="1" damage="6"/>
    </spawner>
    <spawner spawn-region="orange-wool-spawn" player-region="orange-woolroom" delay="2s">
        <item material="wool" amount="1" damage="1"/>
    </spawner>
    <spawner spawn-region="yellow-wool-spawn" player-region="yellow-woolroom" delay="2s">
        <item material="wool" amount="1" damage="4"/>
    </spawner>
</spawners>
<item-mods>
    <rule>
        <match>
            <material>iron helmet</material>
            <material>iron chestplate</material>
            <material>iron leggings</material>
            <material>iron boots</material>
            <material>iron sword</material>
            <material>diamond pickaxe</material>
            <material>iron axe</material>
            <material>iron spade</material>
            <material>shears</material>
            <material>diamond leggings</material>
        </match>
        <modify unbreakable="true"/>
    </rule>
</item-mods>
<crafting>
    <!-- bulkcrafting -->
    <shaped override="false">
        <result material="iron helmet" amount="9"/>
        <shape>
            <row>III</row>
            <row>I.I</row>
        </shape>
        <ingredient symbol="I">iron block</ingredient>
    </shaped>
    <shaped override="false">
        <result material="iron chestplate" amount="9"/>
        <shape>
            <row>I.I</row>
            <row>III</row>
            <row>III</row>
        </shape>
        <ingredient symbol="I">iron block</ingredient>
    </shaped>
    <shaped override="false">
        <result material="iron leggings" amount="9"/>
        <shape>
            <row>III</row>
            <row>I.I</row>
            <row>I.I</row>
        </shape>
        <ingredient symbol="I">iron block</ingredient>
    </shaped>
    <shaped override="false">
        <result material="bucket" amount="9"/>
        <shape>
            <row>I.I</row>
            <row>.I.</row>
        </shape>
        <ingredient symbol="I">iron block</ingredient>
    </shaped>
</crafting>
<renewables>
    <renewable rate="0.5" sound="false" region="spawns" renew-filter="only-iron" replace-filter="only-air" avoid-players="1"/>
</renewables>
<kill-rewards>
    <kill-reward>
        <item material="golden apple" amount="1"/>
        <item material="wood" amount="16" damage="2"/>
        <item material="smooth brick" amount="16" damage="3"/>
    </kill-reward>
</kill-rewards>
<itemkeep>
    <item>iron sword</item>
    <item>bow</item>
    <item>diamond pickaxe</item>
    <item>iron axe</item>
    <item>arrow</item>
    <item>wood</item>
    <item>smooth brick</item>
    <item>WORKBENCH</item>
    <item>golden apple</item>
    <item>string</item>
    <item>bucket</item>
    <item>water bucket</item>
    <item>iron ingot</item>
</itemkeep>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>leather boots</item>
</itemremove>
<toolrepair>
    <tool>iron sword</tool>
    <tool>bow</tool>
    <tool>diamond pickaxe</tool>
    <tool>iron axe</tool>
    <tool>arrow</tool>
</toolrepair>
<hunger>
    <depletion>off</depletion>
</hunger>
<maxbuildheight>30</maxbuildheight>
</map>
