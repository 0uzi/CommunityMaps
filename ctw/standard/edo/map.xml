<map proto="1.4.0">
<name>Edo</name>
<version>1.0.0</version>
<objective>Capture the enemy's two wools!</objective>
<phase>development</phase>
<time>30m</time>
<authors>
    <author uuid="b8add1ba-8e13-4673-bc73-4e3ed524d40e"/> <!-- Blazy -->
</authors>
<teams>
    <team id="red" color="dark red" max="16">Red</team>
    <team id="blue" color="blue" max="16">Blue</team>
</teams>
<kits>
    <kit id="spawn">
        <item slot="0" unbreakable="true">stone sword</item>
        <item slot="1" unbreakable="true" enchantment="arrow infinite:1">bow</item>
        <item slot="28">arrow</item>
        <item slot="2" unbreakable="true" enchantment="dig speed:1">iron pickaxe</item>
        <item slot="3" unbreakable="true" enchantment="dig speed:1">stone axe</item>
        <item slot="30" unbreakable="true">iron spade</item>
        <item slot="4" amount="64" damage="1">wood</item>
        <item slot="5" amount="48">glass</item>
        <item slot="8">golden apple</item>
        <potion duration="6" amplifier="255">resistance</potion>
        <leggings unbreakable="true" material="chainmail leggings"/>
        <boots unbreakable="true" material="iron boots"/>
    </kit>
    <kit id="red-kit" parents="spawn">
        <chestplate unbreakable="true" color="993333">leather chestplate</chestplate>
        <helmet unbreakable="true" color="993333">leather helmet</helmet>
    </kit>
    <kit id="blue-kit" parents="spawn">
        <chestplate unbreakable="true" color="334CB2">leather chestplate</chestplate>
        <helmet unbreakable="true" color="334CB2">leather helmet</helmet>
    </kit>
</kits>
<spawns>
    <default>
        <region yaw="0">
            <cuboid min="-371,47,72" max="-372,47,71"/>
        </region>
    </default>
    <spawn team="red" kit="red-kit">
        <regions>
            <cuboid min="-294.5,11,112.5" max="-294.5,11,110.5" yaw="90"/>
        </regions>
    </spawn>
    <spawn team="blue" kit="blue-kit">
        <regions>
            <cuboid min="-448.5,11,110.5" max="-448.5,11,112.5" yaw="-90"/>
        </regions>
    </spawn>
</spawns>
<wools>
    <wool team="blue" color="green" craftable="false" location="-293,12,80">
        <monument>
            <block>-443.5,12,107.5</block>
        </monument>
    </wool>
    <wool team="blue" color="lime" craftable="false" location="-292,8,142">
        <monument>
            <block>-443.5,12,115.5</block>
        </monument>
    </wool>
    <wool team="red" color="pink" craftable="false" location="-452,8,80">
        <monument>
            <block>-299.5,12,107.5</block>
        </monument>
    </wool>
    <wool team="red" color="purple" craftable="false" location="-451,12,142">
        <monument>
            <block>-299.5,12,115.5</block>
        </monument>
    </wool>
</wools>
<filters>
    <team id="only-blue">blue</team>
    <team id="only-red">red</team>
    <not id="no-void">
        <void/>
    </not>
    <not id="deny-blue-wool-room">
        <any>
            <filter id="only-blue"/>
            <filter id="no-chest"/>
        </any>
    </not>
    <not id="deny-red-wool-room">
        <any>
            <filter id="only-red"/>
            <filter id="no-chest"/>
        </any>
    </not>
    <any id="no-chest">
        <material>chest</material>
    </any>
    <any id="only-iron">
        <material>iron block</material>
    </any>
</filters>
<regions>
    <union id="spawns">
        <rectangle id="red-spawn" min="-306,122" max="-282,101"/>
        <rectangle id="blue-spawn" min="-437,101" max="-458,122"/>
    </union>
    <union id="wool-rooms">
        <union id="red-wool-rooms"> <!-- Red defends these -->
            <rectangle id="green-wool-room" min="-304,84" max="-289,73"/>
            <rectangle id="lime-wool-room" min="-304,150" max="-289,139"/>
        </union>
        <union id="blue-wool-rooms"> <!-- Blue defends these -->
            <rectangle id="pink-wool-room" min="-439,73" max="-454,84"/>
            <rectangle id="purple-wool-room" min="-439,139" max="-454,150"/>
        </union>
    </union>
    <apply block="only-iron" region="spawns" message="You may not edit the spawn area!"/>
    <apply block="deny-blue-wool-room" region="blue-wool-rooms"/>
    <apply block="deny-red-wool-room" region="red-wool-rooms"/>
    <apply enter="only-blue" region="blue-spawn" message="You may not enter the enemy team's spawn area!"/>
    <apply enter="only-red" region="red-spawn" message="You may not enter the enemy team's spawn area!"/>
    <apply enter="only-blue" region="red-wool-rooms" message="You may not enter your own wool room!"/>
    <apply enter="only-red" region="blue-wool-rooms" message="You may not enter your own wool room!"/>
    <apply block-place="no-void" block-break="always" region="everywhere" message="You may not edit the void here!"/>
</regions>
<kill-rewards>
    <kill-reward>
        <item>golden apple</item>
    </kill-reward>
    <kill-reward>
        <item amount="16" damage="1">wood</item>
    </kill-reward>
    <kill-reward>
        <item amount="12">glass</item>
    </kill-reward>
</kill-rewards>
<toolrepair>
    <tool>bow</tool>
    <tool>stone sword</tool>
    <tool>iron pickaxe</tool>
    <tool>iron spade</tool>
    <tool>stone axe</tool>
</toolrepair>
<itemremove>
    <item>leather helmet</item>
    <item>leather chestplate</item>
    <item>chainmail leggings</item>
    <item>iron boots</item>
    <item>arrow</item>
    <item>string</item>
    <item>redstone</item>
    <item>seeds</item>
    <item>wood</item>
    <item>glass</item>
    <item>sapling</item>
    <item>stick</item>
    <item>golden apple</item>
</itemremove>
<crafting>
    <disable>boat</disable>
    <disable>anvil</disable>
</crafting>
<hunger>
    <depletion>off</depletion>
</hunger>
<maxbuildheight>25</maxbuildheight>
<timelock>on</timelock>
</map>
