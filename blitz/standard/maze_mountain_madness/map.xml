<?xml version="1.0"?>
<map proto="1.4.0">
<name>Maze Mountain Madness</name>
<version>1.0.0</version>
<phase>development</phase>
<objective>Destroy all three monuments of the enemy team or eliminate the other team.</objective>
<authors>
    <author uuid="e4cfa2d5-6b11-4e15-a893-9d92f18385f3"/> <!-- mariogoat -->
</authors>
<contributors>
    <contributor uuid="63ddf58a-ba2c-4d39-8481-6358bb46c63a" contribution="xml"/> <!-- samschaap -->
</contributors>
<teams>
    <team id="red" color="red" max="25">Red</team>
    <team id="blue" color="blue" max="25">Blue</team>
</teams>
<rules>
    <rule>Players will start losing lives after three minutes.</rule>
</rules>
<respawn auto="true"/>
<time>20m</time>
<blitz>
    <lives>3</lives>
    <filter>
        <time>3m</time>
    </filter>
</blitz>
<kits>
    <kit id="spawn-kit">
        <clear/>
        <item slot="0" unbreakable="true" material="stone sword"/>
        <item slot="1" unbreakable="true" material="bow"/>
        <item slot="28" amount="8" material="arrow"/>
        <helmet unbreakable="true" material="iron helmet"/>
        <chestplate unbreakable="true" team-color="true" material="leather chestplate"/>
        <leggings unbreakable="true" team-color="true" material="leather leggings"/>
        <boots unbreakable="true" material="iron boots"/>
        <effect duration="3">instant_health</effect>
        <effect duration="oo" amplifier="1">night vision</effect>
    </kit>
    <kit id="obs-kit">
        <potion duration="oo" amplifier="1">night vision</potion>
    </kit>
</kits>
<filters>
    <any id="only-monument-material">
        <material>ender stone</material>
        <material>prismarine</material>
        <material>quartz block</material>
    </any>
</filters>
<regions>
    <apply block="only-monument-material"/>
    <point id="arrow-spawner">8.5,2,-6.0</point>
    <cylinder id="arrow-spawner-player" base="8.5,2,-6.0" radius="2.5" height="1"/>
</regions>
<spawns>
    <spawn team="blue" kit="spawn-kit">
        <regions yaw="180">
            <point>11,2,32</point>
        </regions>
    </spawn>
    <spawn team="red" kit="spawn-kit">
        <regions yaw="0">
            <point>11,2,-44</point> 
        </regions>
    </spawn>
    <default kit="obs-kit">
        <regions yaw="-90">
            <cylinder base="-24.5,29,-6.5" radius="2.5" height="0"/>
        </regions>
    </default>
</spawns>
<destroyables name="End Stone Monument" required="true" completion="100%" materials="ender stone">
    <destroyable owner="red">
        <region><cuboid min="35,3,-42" max="34,4,-41"/></region>
    </destroyable>
    <destroyable owner="blue">
        <region><cuboid min="34,3,30" max="35,4,29"/></region>
    </destroyable>
</destroyables>
<destroyables name="Prismarine Monument" required="true" completion="100%" materials="prismarine">
    <destroyable owner="red">
        <region><cuboid min="14,3,-32" max="15,4,-31"/></region>
    </destroyable>
    <destroyable owner="blue">
        <region><cuboid min="14,3,20" max="15,4,19"/></region>
    </destroyable>
</destroyables>
<destroyables name="Quartz Monument" required="true" completion="100%" materials="quartz block">
    <destroyable owner="red">
        <region><cuboid min="-5,3,-38" max="-4,4,-37"/></region>
    </destroyable>
    <destroyable owner="blue">
        <region><cuboid min="-4,3,26" max="-5,4,25"/></region>
    </destroyable>
</destroyables>
<broadcasts>
    <tip after="1s">You will start losing lives after three minutes have passed!</tip>
    <tip after="3m">You will now lose one life when you are killed!</tip>
</broadcasts>
<itemremove>
    <item>stone sword</item>
    <item>bow</item>
    <item>iron helmet</item>
    <item>leather chestplate</item>
    <item>leather leggings</item>
    <item>iron boots</item>
    <item>golden apple</item>
    <item>ender stone</item>
    <item>prismarine</item>
    <item>quartz block</item>
</itemremove>
<kill-rewards>
    <kill-reward>
        <item material="golden apple"/>
    </kill-reward>
</kill-rewards>
<spawners>
    <spawner spawn-region="arrow-spawner" player-region="arrow-spawner-player" delay="2s">
        <item amount="1" material="arrow"/>
    </spawner>
</spawners>
<hunger>
    <depletion>off</depletion>
</hunger>
<disabledamage>
    <damage>fall</damage>
</disabledamage>
</map>